@page
@model ColegioSystem.Web.Pages.CrearEstudiantesModel
@{
}
<jumbotrom>
    <h1>
        Ingreso de Registro Estudiantes
    </h1>
</jumbotrom>
<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Estudiantes.NIE"></label>
        <input type="text" class="form-control" asp-for="Estudiantes.NIE" placeholder="Ingrese Nombre del Estudiante">
        <span class="text-danger" asp-validation-for="Estudiantes.NIE"></span>
    </div>

    <div class="form-group">
        <label asp-for="Estudiantes.Nombre"></label>
        <input type="text" class="form-control" asp-for="Estudiantes.Nombre" placeholder="Ingrese # de NIE">
        <span class="text-danger" asp-validation-for="Estudiantes.Nombre"></span>
    </div>

    <div class="form-group">
        <label asp-for="Estudiantes.Activo"></label>
        <input type="text" class="form-control" asp-for="Estudiantes.Activo">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-sm btn-primary">Guardar</button>   <a class="btn btn-sm btn-danger" asp-area="" asp-page="/Estudiantes">Cancelar</a>
    </div>
</form>