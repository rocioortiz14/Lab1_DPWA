@page
@model ColegioSystem.Web.Pages.DocentesModel
@{
}

    <h1 class="text-lg-center">Listado de Docentes</h1>

    <td>
        <a class="btn btn-sm btn-success" asp-page="/CrearDocente">Ingresar Docente</a>
    </td>
    <br />
    <br />
    <table class="table table-dark">
        <thead>
            <tr>
                <th> Id </th>
                <th> Nombre </th>
                <th> NIP</th>
                <th> Nivel</th>
                <th> Estado </th>
                <th class="text-center">Opciones</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Docentes)
            {
                <tr>
                    <td> @item.Id</td>
                    <td> @item.Nombre</td>
                    <td> @item.NIP</td>
                    <td> @item.Nivel</td>
                    <td>
                        @if (item.Activo)
                        {
                            <p>Si</p>
                        }
                        else
                        {
                            <p>No</p>
                        }
                    </td>


                    <td class="text-center">
                        <a class="btn btn-sm btn-danger" asp-area="" asp-page="/EditarDocentes" asp-route-id="@item.Id">Editar</a>
                    
                        <a class="btn btn-sm btn-warning" asp-area="" asp-page="/EliminarDocentes" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
